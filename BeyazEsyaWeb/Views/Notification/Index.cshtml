@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<br />
<br />

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Bize Ulaşın </h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#" class="mdi mdi-home"> Ana Sayfa</a></li>
					<li class="breadcrumb-item active">Bize Ulaşın</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<section class="content">

	<!-- Default box -->
	<div class="card">
		<div class="card-body row">
			<div class="col-5 text-center d-flex align-items-center justify-content-center">
				<div class="">
					<h2><strong>BeyazEvim</strong></h2>
					<p class="lead mb-5">
						ÇÜ Bilgisayar müh. Balcalı Sarıçam Adana,
						01330 Sarıçam/Adana<br>
						Telefon: (804) 123-5432
					</p>
				</div>
			</div>
			<div class="col-7">
				<div class="form-group">
					<label for="inputName">İsim</label>
					<input type="text" id="isim" class="form-control">
				</div>
				<div class="form-group">
					<label for="inputEmail">E-Mail</label>
					<input type="email" id="mail" class="form-control">
				</div>
				<div class="form-group">
					<label for="inputSubject">Konu</label>
					<input type="text" id="konu" class="form-control">
				</div>
				<div class="form-group">
					<label for="inputMessage">Mesajınız</label>
					<textarea id="Mesaj" class="form-control" rows="4"></textarea>
				</div>
				<div class="form-group">
					<input type="submit" id="sendButton" class="btn btn-primary" value="Mesajı Gönder">
				</div>
			</div>
		</div>
	</div>

</section>
<script>
	

	$(document).ready(function () {
		$('#sendButton').click(function () { // Butona tıklama olayı eklendi
			var isim = $('#isim').val();
			var mail = $('#mail').val();
			var konu = $('#konu').val();
			var Mesaj = $('#Mesaj').val();
			;

			var Message = {
				isim: isim,
				mail: mail,
				konu: konu,
				Mesaj: Mesaj

			};

			$.ajax({
				type: 'POST',
				url: '/Notification/AddMessage',
				contentType: 'application/json',
				data: JSON.stringify(Message),
				success: function (data) {
					Swal.fire({
						title: "Emin Misiniz ?",
						text: "Mesajı Gönderiyorsunuz",
						icon: "success",
						showCancelButton: true,
						confirmButtonColor: "#3085d6",

						confirmButtonText: "EVET,Gönder"
					}).then((result) => {
						if (result.isConfirmed) {
							Swal.fire({
								position: "top-end",
								icon: "success",
								title: "MESAJINIZ GÖNDERİLDİ",
								showConfirmButton: false,
								timer: 1500
							})
							setTimeout(function () {
								location.reload();
							}, 2000);
						}
						;

					});
				},
				error: function (xhr, status, error) {
					console.error('AJAX error:', error);
					// Hata durumunda istediğiniz işlemleri yapabilirsiniz
				}
			});
		});
	});
</script>