	$(document).ready(function () {
		$('#kodbutonu').click(function () {
			var girilenVeri = $('#kod').val();

			var beklenenVeri = 'admin6868';

			// Girilen veriyi kontrol et
			if (girilenVeri === beklenenVeri) {
				window.location.href = '/Login/Index';
			} else {
				Swal.fire({
					icon: "error",
					title: "BAŞARISIZ.",
					text: "GİRİŞ REDDEDİLDİ",

				});
			}
		});
	});


	function isValidEmail(email) {
    // Basit bir e-posta doğrulama regex'i kullanarak kontrol ediyoruz.
    var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
    return emailRegex.test(email);
}



	$(document).ready(function () {

		$('#SubButon').click(function () {
			var Email = $('#Email').val();
			if (!isValidEmail(Email))
			{
				Swal.fire({
					title: "HATA",
					text: "Lütfen bir Mail girişi yapın",
					icon: "error"
				});
			}
			else 
			{
			;

			var Message = {
				Email: Email,
			};

			$.ajax({
				type: 'POST',
				url: '/Notification/Subscribe',
				contentType: 'application/json',
				data: JSON.stringify(Message),
				success: function (data) {
					Swal.fire({
						title: "Emin Misiniz ?",
						text: "Abone Oluyorsunuz",
						icon: "question",
						showCancelButton: true,
						confirmButtonColor: "#3085d6",

						confirmButtonText: "EVET"
					}).then((result) => {
						if (result.isConfirmed) {
							Swal.fire({
								position: "top-end",
								icon: "success",
								title: "Aboneliğiniz için teşekkürler.",
								showConfirmButton: false,
								timer: 1500
							})
							setTimeout(function () {
								location.reload();
							}, 2000);
						}
						;

					});
				},
				error: function (xhr, status, error) {
					console.error('Patladık', error);

				}
			});
		}});
	});


</script>
