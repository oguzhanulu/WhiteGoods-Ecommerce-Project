<script>
	$(document).ready(function () {
		$('#btngiris').click(function () { // Butona tıklama olayı eklendi
			var password = $('#password').val();
			var email = $('#email').val();
			;
			var Message = {
				password: password,
				email: email

			};

			$.ajax({
				type: 'POST',
				url: '/Login/LoginControl',
				contentType: 'application/json',
				data: JSON.stringify(Message),
				success: function (response) {
					Swal.fire({
						title: "BAŞARILI",
						text: "Giriş Kabul Edildi",
						showConfirmButton: false,
						icon: "success"
					});
					setTimeout(function () {
						window.location.href = '/Admin/Index/'
					}, 1000);
					

				},
				error: function (xhr, status, error) {

					Swal.fire({
						title: "HATA",
						text: "Giriş Reddedildi!",
						icon: "error"
					});
					setTimeout(function () {
						location.reload();
					}, 2000);

				}
			});
		});
	});
	

</script>
