<body class="login-page" style="min-height: 496.781px;">
	<div class="logo_section">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="logo"><img src="~/Ecomfridge/html/images/2yenilogo.png" style="width:150px"></div>
				</div>
			</div>
		</div>
	</div>


	<div class="login-box">
		<div class="login-logo">
			<a href="/Home/Index"><b>Ana Sayfaya Dön</b></a>
		</div>
		<!-- /.login-logo -->
		<div class="card">
			<div class="card-body login-card-body">
				<p class="login-box-msg">Oturumunuzu başlatmak için giriş yapın</p>


				<div class="input-group mb-3">
					<input type="email" id="email" class="form-control" placeholder="Email">
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-envelope"></span>
						</div>
					</div>
				</div>
				<div class="input-group mb-3">
					<input type="password" id="password" class="form-control" placeholder="Şifre">
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-lock"></span>
						</div>
					</div>
				</div>
				<div class="row">
					
					<!-- /.col -->
					<div class="col-6">
						<button type="submit" id="btngiris" class="btn btn-primary btn-block">Giriş Yap</button>
					</div>
					<!-- /.col -->
				</div>



				<!-- /.social-auth-links -->

				<p class="mb-1">
					<a href="forgot-password.html">Şifremi unuttum</a>
				</p>

			</div>

			<!-- /.login-card-body -->
		</div>
	</div>
	<br />
	<br />
	<!-- /.login-box -->
	<!-- jQuery -->
	<script src="../../plugins/jquery/jquery.min.js"></script>
